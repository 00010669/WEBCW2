extends layout.pug 

block number1
    if error 
        p.error Please fill in the input

    if success 
        p.success Saved! 
    
    if deleted
        p.error Deleted
    form(action = "/add" method='POST')
        input.input(type="text" placeholder="Enter your task" name="todo")
        textarea.input(type="text" placeholder="Task description" name="description")

        button.btn Add 

    
    div.todos
        if todos.length 
            each todo in todos 
                p.todo 
                    if todo.done
                        a.done(href=`/${todo.id}/update`) #{ todo.description }
                    else 
                        a.undone(href=`/${todo.id}/update`) #{ todo.description }
                    a.delete(href=`/${todo.id}/delete`) Delete
        else 
            p.todo No task available